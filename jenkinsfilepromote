pipeline{
    agent {label 'MVN'}
    triggers {
        cron ('0 17 * * *')
    }
    stages{
        stage ('vcs'){
            steps {
                git url:'git@github.com:GOWTHI143/spring-petclinic.git'
            }
        }
        stage ('merging'){
            steps{
                sh """git pull --all
                      git checkout release
                      git merge develop --no-ff
                      git push origin release """
            }
        }
    }
}